root = true

[*]
charset = utf-8
indent_style = space
tab_width = 4
end_of_line = lf
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_size = 4
max_line_length = 120
insert_final_newline = true
# required for ktlint
# noinspection EditorConfigKeyCorrectness
disabled_rules = no-wildcard-imports,import-ordering